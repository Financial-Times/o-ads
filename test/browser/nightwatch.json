{
  "src_folders" : ["test/browser/tests"],
  "output_folder" : "${CIRCLE_TEST_REPORTS}/nightwatch",

  "selenium" : {
    "start_process" : false,
    "server_path" : "",
    "log_path" : ""
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "${TEST_URL}",
      "selenium_port"  : 80,
      "selenium_host"  : "${SELENIUM_HOST}",
      "silent": true,
      "screenshots" : {
        "enabled" : false
      },
      "username": "${SELENIUM_USER}",
      "access_key": "${SELENIUM_KEY}",
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome_latest" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "version": "latest",
        "platform": "WINDOWS"
      }
    },
    "chrome_latest-1" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "version": "latest-1",
        "platform": "WINDOWS"
      }
    },
    "firefox_latest" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "version": "latest",
        "platform": "WINDOWS"
      }
    },
    "firefox_latest-1" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "version": "latest-1",
        "platform": "WINDOWS"
      }
    },
    "ie8_Grid" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "8",
        "platform": "WINDOWS"
      }
    },
    "ie9_Grid" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "9",
        "platform": "WINDOWS"
      }
    },
    "ie10_Grid" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "10",
        "platform": "WINDOWS"
      }
    },
    "ie11_Grid" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "11",
        "platform": "WINDOWS"
      }
    },
    "safari8_Grid" : {
      "desiredCapabilities": {
        "browserName": "safari",
        "version": "8",
        "platform": "MAC"
      }
    }
  }
}
