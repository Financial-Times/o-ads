{
  "src_folders" : ["test/browser/tests"],
  "output_folder" : "./reports",

  "selenium" : {
    "start_process" : false,
    "server_path" : "",
    "log_path" : ""
  },

  "test_settings" : {
    "default" : {
      "launch_url" : "${TEST_URL}",
      "selenium_port"  : 80,
      "selenium_host"  : "${SELENIUM_HOST}",
      "silent": true,
      "screenshots" : {
        "enabled" : false
      },
      "username": "${SELENIUM_USER}",
      "access_key": "${SELENIUM_KEY}",
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "chrome_latest_sauce" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "version": "latest",
        "platform": "Windows 7"
      }
    },
    "chrome_latest-1_sauce" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "version": "latest-1",
        "platform": "Windows 7"
      }
    },
    "firefox_latest_sauce" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "version": "latest",
        "platform": "Windows 7"
      }
    },
    "firefox_latest-1_sauce" : {
      "desiredCapabilities": {
        "browserName": "firefox",
        "version": "latest-1",
        "platform": "Windows 7"
      }
    },
    "ie_11_sauce" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "11.0",
        "platform": "Windows 7"
      }
    },
    "ie_10_sauce" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "10.0",
        "platform": "Windows 7"
      }
    },
    "ie_9_sauce" : {
      "desiredCapabilities": {
        "browserName": "internet explorer",
        "version": "9.0",
        "platform": "Windows 7"
      }
    }
  }
}
