<span class="o-registry-demo-chunk">

<!-- include the o-ads origami module - can use require instead -->
<script src="/bundles/js?modules=o-ads"></script>
<link rel="stylesheet" href="/bundles/css?modules=o-ads"/>

<div>
    Advert 1 (Master)
    <div id="advert1" class="advertising {{classes}}" {{{o-ads-data-attr}}}></div>
</div>

<div>
    Advert 2 (Companion)
    <div id="advert2" class="advertising {{classes}}" {{{o-ads-data-attr}}}></div>
</div>

    <script>
    // initialise the configuration for o-ads with master and companion
    var ads = Origami["o-ads"].init({
        dfp_site: 'test.5887.origami',
        dfp_zone: 'master-companion-test',
        formats: {
            advert1: {
                sizes: [[728,90]],
                outOfPage: true
            },
            advert2: {
                sizes: [[300,250]]
            },
        }
    });

    ads.slots.initSlot('advert1');
    ads.slots.initSlot('advert2');
    </script>


</span>
