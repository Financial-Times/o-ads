{
  "name": "o-ads",
  "version": "9.2.0",
  "description": "Origami Advertising Client-side Library",
  "main": "main.js",
  "scripts": {
	"get-ngrok-url": "curl --silent --show-error http://127.0.0.1:4040/api/tunnels | sed -nE 's/.*public_url\":\"https:..([^\"]*).*/\\1/p'",
	"public-test-url": "wget https://bin.equinox.io/c/4VmDzA7iaHb/ngrok-stable-linux-amd64.zip && tar -xzf ngrok-stable-linux-amd64.zip && ngrok authtoken $NGROK_KEY && ngrok http 3002 && export BROWSERSTACK_URL=`npm run get-ngrok-url`",
    "demo-server": "obt demo --runServer --port=3002",
    "test": "karma start karma.conf.js",
    "test-browser-basic": "nightwatch -c ./test/browser/config/nightwatch.conf.js --group basic --env chrome,ie10,ie11,edge,galaxy_s8,iphone_7",
	"test-browser-extended": "nightwatch -c ./test/browser/config/nightwatch.conf.js --group extended --env chrome",
    "test-browser-gecko-temp": "nightwatch -c ./test/browser/config/nightwatch.conf.js --group gecko-temp --env firefox,safari",
    "coverage": "export COVERAGE=true && karma start && unset COVERAGE",
    "ci": "export COVERAGE=true && export CI=true && karma start && unset COVERAGE && unset CI",
    "verify": "obt verify"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Financial-Times/o-ads.git"
  },
  "author": "",
  "devDependencies": {
    "@financial-times/secret-squirrel": "^2.5.5",
    "babel-core": "^6.26.0",
    "babelify": "^6.0.3",
    "bower": "^1.7.1",
    "browserify": "^13.0.0",
    "browserify-istanbul": "^2.0.0",
    "browserify-swap": "^0.2.2",
    "browserstack-local": "^1.3.4",
    "debowerify": "^1.3.1",
    "dotenv": "^6.0.0",
    "fetch-mock": "^5.1.1",
    "isomorphic-fetch": "^2.0.0",
    "istanbul": "^0.4.2",
    "karma": "^0.13.15",
    "karma-browserify": "^4.4.2",
    "karma-chrome-launcher": "^0.2.2",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-ie-launcher": "^0.2.0",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-phantomjs2-launcher": "^0.3.2",
    "karma-qunit": "^0.1.8",
    "karma-safari-launcher": "^0.1.1",
    "karma-webdriver-launcher": "^1.0.4",
    "nightwatch": "^0.9.21",
    "notify-saucelabs": "^1.0.3",
    "origami-build-tools": "^7.9.0",
    "phantomjs": "^2.1.7",
    "pre-git": "^3.15.0",
    "qunitjs": "^1.20.0"
  },
  "browserify-swap": {
    "@packages": [
      "lodash/date/now"
    ],
    "karma": {
      ".*lodash/date/now.js$": "./test/qunit/mocks/now.js"
    }
  },
  "license": "MIT",
  "config": {
    "pre-git": {
      "pre-commit": [
        "node_modules/.bin/secret-squirrel"
      ]
    }
  },
  "engines": {
    "node": "^8.6.0"
  },
  "release": {
    "analyzeCommits": "simple-commit-message"
  }
}
